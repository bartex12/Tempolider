<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.bartex.p010_train"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="26" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="26.0.0-alpha1" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.bartex.p010_train.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ru.bartex.p010_train.TimeMeterActivity" >
        </activity>
        <activity android:name="ru.bartex.p010_train.TimeGrafActivity" >
        </activity>
        <activity android:name="ru.bartex.p010_train.PrefActivity" >
        </activity>
        <activity
            android:name="ru.bartex.p010_train.SetListActivity"
            android:parentActivityName="ru.bartex.p010_train.MainActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="ru.bartex.p010_train.DetailActivity"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="ru.bartex.p010_train.HelpMainActivity"
            android:label="" >
        </activity>
        <activity
            android:name="ru.bartex.p010_train.TabBarActivity"
            android:label="@string/title_activity_tab_bar"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="ru.bartex.p010_train.ChangeTempActivity"
            android:label="@string/change_name" >
        </activity>
        <activity
            android:name="ru.bartex.p010_train.NewExerciseActivity"
            android:label="@string/new_name" >
        </activity>
    </application>

</manifest>