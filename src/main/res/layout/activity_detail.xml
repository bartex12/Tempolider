<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фрагмент №"
            android:id="@+id/textView"
            android:textSize="22dp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/mark_item_set_editText"
            android:text="0"
            android:textColor="#0512c5"
            android:enabled="false"
            android:singleLine="true"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:gravity="left|center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время , с"
            android:id="@+id/textView2"
            android:textSize="22dp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/time_item_set_editText"
            android:text="@string/timeValue_item1"
            android:layout_weight="1"
            android:enabled="true"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:focusable="true"
            android:selectAllOnFocus="true"
            android:gravity="center"
            android:layout_gravity="top"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество , раз"
            android:id="@+id/textView3"
            android:layout_gravity="center_vertical"
            android:textSize="22dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/reps_item_set_editText"
            android:text="@string/repsValue_item1"
            android:layout_weight="1"
            android:enabled="true"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:selectAllOnFocus="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отмена"
            android:id="@+id/buttonCancel"
            android:background="@drawable/draw"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Принять"
            android:id="@+id/buttonOk"
            android:background="@drawable/draw"
            android:layout_weight="5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</LinearLayout>

